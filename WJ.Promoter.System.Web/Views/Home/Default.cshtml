            -moz-box-shadow: 0 1px 4px rgba(0, 0, 0, 0.3), 0 0 150px rgba(0, 0, 0, 0.1) inset;
            box-shadow: 0 1px 4px rgba(0, 0, 0, 0.3), 0 0 150px rgba(0, 0, 0, 0.1) inset;
