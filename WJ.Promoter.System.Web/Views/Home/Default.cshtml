        .dashboard-stats-item {
            position: relative;
            overflow: hidden;
            color: #fff;
            cursor: pointer;
            height: 150px;
            padding: 10px 10px 5px 20px;
            border-radius: 10px;
            transform: translateZ(0);
        }

            .dashboard-stats-item :hover {
                transform: scale(1.05);
            }

        .dashboard-stats:hover {
            transform: scale(1.05);
            /*box-shadow: 4px -4px 4px #888888,4px 4px 4px #888888,4px 4px 4px #888888,-4px -4px 4px #888888;*/
            box-shadow: 0 5px 5px rgba(0, 0, 0, 0.5), 0 0 150px rgba(0, 0, 0, .3) inset;
        }

        #copyrightcontent {
            height: 30px;
            line-height: 29px;
            overflow: hidden;
            position: absolute;
            top: 100%;
            margin-top: -30px;
            width: 100%;
            background-color: #fff;
            border: 1px solid #e6e6e6;
            padding-left: 10px;
            padding-right: 10px;
